<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toast_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|bottom"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/tm_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/toy"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@+id/tm_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상세페이지로 이동합니다."
        android:fontFamily="@font/font2"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/tm_image"
        app:layout_constraintBottom_toBottomOf="@+id/tm_image"
        app:layout_constraintStart_toEndOf="@+id/tm_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>